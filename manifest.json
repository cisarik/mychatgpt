{
  "manifest_version": 3,
  "name": "MyChatGPT",
  "version": "0.3.0",
  "description": "Single-click backup with optional header delete for short ChatGPT chats.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "MyChatGPT Cleaner",
    "default_popup": "pages/cleaner.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": ["https://chatgpt.com/*"],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
