{
  "manifest_version": 3,
  "name": "MyChatGPT (MVP Scaffold)",
  "version": "0.0.1",
  "description": "Scaffold extension for MyChatGPT with logging and IndexedDB stubs.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "scripting", "windows"],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}
